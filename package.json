{
	"name": "vite-css-modules",
	"version": "0.0.0-semantic-release",
	"description": "Vite plugin for correct CSS Modules behavior",
	"keywords": [
		"vite",
		"plugin",
		"css modules",
		"patch"
	],
	"license": "MIT",
	"repository": "privatenumber/vite-css-modules",
	"funding": "https://github.com/privatenumber/vite-css-modules?sponsor=1",
	"author": {
		"name": "Hiroki Osame",
		"email": "hiroki.osame@gmail.com"
	},
	"files": [
		"dist"
	],
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.cts",
	"exports": {
		"require": {
			"types": "./dist/index.d.cts",
			"default": "./dist/index.cjs"
		},
		"import": {
			"types": "./dist/index.d.mts",
			"default": "./dist/index.mjs"
		}
	},
	"imports": {
		"vite": {
			"vite5": "vite5",
			"default": "vite"
		},
		"#vite-css-modules": {
			"types": "./src/index.ts",
			"development": "./src/index.ts",
			"default": "./dist/index.mjs"
		}
	},
	"packageManager": "pnpm@9.12.1",
	"scripts": {
		"build": "pkgroll",
		"test:vite5": "tsx --import alias-imports -C vite5 tests",
		"test:vite6": "tsx tests",
		"test": "pnpm test:vite5 && pnpm test:vite6",
		"dev": "tsx watch --conditions=development --ignore='/private/**' tests",
		"type-check": "tsc",
		"lint": "lintroll .",
		"prepack": "pnpm build && clean-pkg-json"
	},
	"peerDependencies": {
		"lightningcss": "^1.23.0",
		"postcss": "^8.4.33",
		"vite": "^5.0.12 || ^6.0.0"
	},
	"peerDependenciesMeta": {
		"lightningcss": {
			"optional": true
		}
	},
	"dependencies": {
		"@ampproject/remapping": "^2.3.0",
		"@rollup/pluginutils": "^5.1.4",
		"generic-names": "^4.0.0",
		"icss-utils": "^5.1.0",
		"magic-string": "^0.30.17",
		"postcss-modules-extract-imports": "^3.1.0",
		"postcss-modules-local-by-default": "^4.2.0",
		"postcss-modules-scope": "^3.2.1",
		"postcss-modules-values": "^4.0.0"
	},
	"devDependencies": {
		"@types/icss-utils": "^5.1.2",
		"@types/lodash.camelcase": "^4.3.9",
		"@types/node": "^22.10.2",
		"@types/postcss-modules-extract-imports": "^3.0.5",
		"@types/postcss-modules-local-by-default": "^4.0.2",
		"@types/postcss-modules-values": "^4.0.2",
		"@vitejs/plugin-vue": "^5.2.1",
		"alias-imports": "^1.1.0",
		"clean-pkg-json": "^1.2.0",
		"fs-fixture": "^2.6.0",
		"lightningcss": "^1.28.2",
		"lintroll": "^1.11.0",
		"lodash.camelcase": "^4.3.0",
		"manten": "^1.3.0",
		"outdent": "^0.8.0",
		"pkgroll": "^2.5.1",
		"playwright-chromium": "^1.49.1",
		"postcss": "^8.4.49",
		"postcss-selector-parser": "^6.1.2",
		"rollup": "^4.28.1",
		"sass": "^1.83.0",
		"tsx": "^4.19.2",
		"typescript": "^5.7.2",
		"vite": "6",
		"vite5": "npm:vite@5",
		"vue": "^3.5.13"
	}
}
